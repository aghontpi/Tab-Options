{
    "manifest_version": 3,
    "name": "Tab Options",
    "version": "1.2",
    "description": "Asks before closing duplicate tabs and focuses the existing one. Redirects back on navigation duplicates if kept.",
    "permissions": [
      "tabs",      
      "scripting",
      "storage",
      "contextMenus"
    ],
    "host_permissions": [
      "<all_urls>" 
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": { 
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        },
        "default_title": "Tab Options",
        "default_popup": "popup.html" 
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
    {
      "resources": [
        "content_script.js",
        "style.css"
       ],
      "matches": ["<all_urls>"]
    }
  ]
  }