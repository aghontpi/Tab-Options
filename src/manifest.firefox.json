{
  "manifest_version": 3,
  "name": "Tab Options",
  "version": "1.4.2",
  "description": "Detects duplicate tabs, asks before closing duplicate tabs and focuses the existing one. Export and import tabs ",
  "permissions": ["tabs", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["browser-polyfill.js", "background.js"]
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Tab Options",
    "default_popup": "popup/popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js"],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'sha256-uhDXqIca8+8LHsiFEHZ63hPgZ+afR5PQ9Tgby9pua1M='; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["browser-polyfill.js", "content_script.js", "style.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-options@aghontpi.github.com",
      "strict_min_version": "109.0"
    }
  }
}
