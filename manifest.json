{
    "manifest_version": 3,
    "name": "Tab Options",
    "version": "1.1",
    "description": "Asks before closing duplicate tabs and focuses the existing one. Redirects back on navigation duplicates if kept.",
    "permissions": [
      "tabs",      
      "scripting"  
    ],
    "host_permissions": [
      "<all_urls>" 
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": { 
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }